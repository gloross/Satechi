/* ------------------------------------------------------------ *\
  Shipping Protection
\* ------------------------------------------------------------ */

.shipping-protection {
  padding: 1.1428571429em;
  border: 1px solid #d9d9d9;
}

.shipping-protection .shipping-protection__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}

.shipping-protection .shipping-protection__checkbox {}

.shipping-protection .shipping-protection__checkbox input{
  opacity: 0;
  position: absolute;
}

.shipping-protection .shipping-protection__checkbox input:checked ~ label:after {
  opacity: 1;
  visibility: visible;
}

.shipping-protection .shipping-protection__checkbox label{
  position: relative;
  display: flex;
  align-items: center;
}

.shipping-protection .shipping-protection__checkbox label:before {
  content: '';
  display: inline-block;
  margin-right: 15px;
  height: 18px;
  width: 18px;
  border: 1px solid #d9d9d9;
}

.shipping-protection .shipping-protection__checkbox label:after {
  content: '';
  display: block;
  text-align: center;
  background-color: #f1603b;
  width: 18px;
  height: 18px;
  position: absolute;
  top: auto;
  left: 1px;
  opacity: 0;
  visibility: hidden;
}

.shipping-protection .shipping-protection__body {
  display: flex;
  align-items: flex-start;
}

.shipping-protection .shipping-protection__image {
  max-width: 70px;
  height: 70px;
  margin-right: 8px;
}

.shipping-protection .shipping-protection__image img{
  display: block;
  width: 100%;
  height: 100%;
}

.shipping-protection .shipping-protection__features li{
  margin-bottom: 5px;
  display: flex;
  align-items: center;
}

.shipping-protection .shipping-protection__features li:before {
  content: '\2713';
  background-color: #f1603b;
  border-radius: 50%;
  color: #fff;
  width: 16px;
  height: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 5px;
}

.shipping-protection .shipping-protection__price {
  font-weight: 700;
}

