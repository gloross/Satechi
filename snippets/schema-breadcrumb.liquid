<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": {{ shop.secure_url | json }},
          "name": {{ shop.name | json }}
        }
      }{% if template.name == "collection" and current_tags %},
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": {{ shop.secure_url | append: collection.url | json }},
          "name": {{ collection.title | json }}
        }
      },
      {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "https:{{ collection.url }}/{{ current_tags | join: '+' }}",
          "name": {{ current_tags | join: ' + ' | json }}
        }
      }{% elsif template.name == "product" and collection %},
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": {{ shop.secure_url | append: collection.url | json }},
          "name": {{ collection.title | json }}
        }
      },
      {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": {{ shop.secure_url | append: product.url | json }},
          "name": {{ product.title | json }}
        }
      }{% elsif template.name == "product" %},
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": {{ product.type | url_for_type | json }},
          "name": {{ product.type | json }}
        }
      },
      {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": {{ shop.secure_url | append: product.url | json }},
          "name": {{ product.title | json }}
        }
      }{% elsif template.name == "blog" and current_tags %},
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": {{ shop.secure_url | append: blog.url | json }},
          "name": {{ blog.title | json }}
        }
      },
      {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "{{ shop.secure_url }}{{ blog.url }}/tagged/{{ current_tag_handles | join: '+' }}",
          "name": {{ current_tags | join: " + " | json }}
        }
      }{% else %},
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": {{ shop.secure_url | append: current_url | json }},
          "name": {{ page_title | json }}
        }
      }{% endif %}
    ]
  }
</script>
