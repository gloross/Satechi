{% if product.metafields.custom_fields["show_custom_content"] != blank %}
  <div class="custom-field custom-field__show-custom-content custom-field__type--checkbox">
    <h3 class="custom-field--title">Show custom product content? </h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["show_custom_content"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}